# Notes system aliases

# Quick access to note commands
alias n='note'
alias na='note-add'
alias nt='note-tasks'
alias nta='note-task-add'
alias np='note-preview'

# File selection and search
alias ns='note-select'           # Select note file with fzf
alias nf='note-search'           # Search notes with ripgrep + fzf

# Additional convenience aliases
alias nlast='note-preview 1'     # View last week's notes
alias n2w='note-preview 2'       # View notes from 2 weeks ago
alias n3w='note-preview 3'       # View notes from 3 weeks ago