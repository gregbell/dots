EOF
)

# Use fzf to select an emoji, then extract just the emoji character
selected=$(echo "$emojis" | fzf --height=40% --reverse --prompt="Select emoji: ")

if [ -n "$selected" ]; then
    # Extract just the emoji (first field before the space)
    emoji=$(echo "$selected" | awk '{print $1}')
    echo "$emoji"
fi
